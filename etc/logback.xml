<included>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%date [%level] %logger{0}\(%line\): %msg %mdc%n</Pattern>
		</layout>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/proeasy/proeasy.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/proeasy/proeasy.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%level] %logger{0}\(%line\): %msg %mdc%n</pattern>
		</encoder>
	</appender>

	<logger name="com.superdownloader" level="DEBUG" />
	<logger name="net.schmizz.sshj" level="OFF" />
	<logger name="org.apache.camel.processor.DefaultErrorHandler" level="OFF" />

	<root level="WARN">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>
</included>