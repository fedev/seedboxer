<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath:proeasy-beans.xml"/>
	
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
			    <value>file:${proeasy.config.path}/jdbc.properties</value>
			    <value>file:${proeasy.config.path}/proeasy.properties</value>
			    <value>file:${proeasy.config.path}/c3p0.properties</value>
			</list>
		</property>
	</bean>

</beans>